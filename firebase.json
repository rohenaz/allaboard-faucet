{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "/source_media"
    ],
    "rewrites": [
      {
        "source": "/tap",
        "function": "tap"
      },{
        "source": "/status",
        "function": "status"
      },{
        "source": "/mbwebhook",
        "function": "mbwebhook"
      },{
        "source": "!/js/**",
        "detination": "/index.html"
      },
      {
        "source": "!/css/**",
        "detination": "/index.html"
      },
      {
        "source": "!/img/**",
        "detination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
